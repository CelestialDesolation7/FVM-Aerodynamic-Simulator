{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "..",
                "-G",
                "Visual Studio 17 2022",
                "-A",
                "x64"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile",
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": []
        },
        {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile",
                "$nvcc"
            ],
            "group": "build"
        },
        {
            "label": "Clean and Rebuild",
            "type": "shell",
            "command": "Remove-Item -Path build -Recurse -Force -ErrorAction SilentlyContinue; New-Item -ItemType Directory -Path build -Force | Out-Null; Set-Location build; cmake .. -G 'Visual Studio 17 2022' -A x64; cmake --build . --config Release",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile",
                "$nvcc"
            ],
            "group": "build"
        }
    ]
}
